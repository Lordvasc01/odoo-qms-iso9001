<odoo>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window"
            id="open_qms_improvement_list">
        <field name="name">Improvements</field>
        <field name="res_model">qms.improvement</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_improvement_form"
            model="ir.ui.view">
        <field name="name">qms.improvement.form</field>
        <field name="type">form</field>
        <field name="model">qms.improvement</field>
        <field name="inherit_id"
               ref="qms.view_qms_finding_form" />
        <field name="arch"
               type="xml">
            <form name="finding"
                  position="attributes">
                <attribute name="string">Improvement</attribute>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_qms_improvement_tree"
            model="ir.ui.view">
        <field name="name">qms.improvement.tree</field>
        <field name="type">tree</field>
        <field name="model">qms.improvement</field>
        <field name="inherit_id"
               ref="qms.view_qms_finding_tree" />
        <field name="arch"
               type="xml">
            <tree name="finding"
                  position="attributes">
                <attribute name="string">Improvement</attribute>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window.view"
            id="action_qms_improvement_tree">
        <field name="sequence"
               eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id"
               ref="view_qms_improvement_tree" />
        <field name="act_window_id"
               ref="open_qms_improvement_list" />
    </record>

    <record model="ir.actions.act_window.view"
            id="action_qms_improvement_form">
        <field name="sequence"
               eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id"
               ref="view_qms_improvement_form" />
        <field name="act_window_id"
               ref="open_qms_improvement_list" />
    </record>

</odoo>
