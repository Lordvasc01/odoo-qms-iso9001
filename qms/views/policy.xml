<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_policy_tree"
            model="ir.ui.view">
        <field name="name">qms.policy.tree</field>
        <field name="model">qms.policy</field>
        <field name="type">tree</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="version" />
                <field name="date" />
                <field name="approved" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_policy_form"
            model="ir.ui.view">
        <field name="name">qms.policy.form</field>
        <field name="model">qms.policy</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box"
                         name="button_box">
                        <button name="toggle_approved"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-check-square-o">
                            <field name="approved"
                                   widget="boolean_button"
                                   options='{"terminology": {
                                    "string_true": "Approved",
                                    "string_false": "Not Approved",
                                   }}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="version" />
                            <field name="date" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" />
                        </page>
                        <page string="Components">
                            <field name="policy_component_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="open_qms_policy_list"
            model="ir.actions.act_window">
        <field name="name">Policies</field>
        <field name="res_model">qms.policy</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
