<odoo>

    <record id="view_qms_policy_tree"
            model="ir.ui.view">
        <field name="name">qms.policy.tree</field>
        <field name="model">qms.policy</field>
        <field name="type">tree</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="revision" />
                <field name="date" />
            </tree>
        </field>
    </record>

    <record id="view_qms_policy_form"
            model="ir.ui.view">
        <field name="name">qms.policy.form</field>
        <field name="model">qms.policy</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="revision" />
                            <field name="date" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" />
                        </page>
                        <page string="Components">
                            <field name="policy_component_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="open_qms_policy_list"
            model="ir.actions.act_window">
        <field name="name">Policies</field>
        <field name="res_model">qms.policy</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
