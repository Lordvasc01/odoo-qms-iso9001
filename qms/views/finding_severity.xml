<odoo>

    <!-- FORM VIEW -->
    <record id="view_qms_finding_severity_form"
            model="ir.ui.view">
        <field name="name">qms.finding.severity.form</field>
        <field name="type">form</field>
        <field name="model">qms.finding.severity</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="sequence" />
                        <field name="description"
                               colspan="2" />
                        <field name="active" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="open_qms_finding_severity_list"
            model="ir.actions.act_window">
        <field name="name">Severity</field>
        <field name="res_model">qms.finding.severity</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
