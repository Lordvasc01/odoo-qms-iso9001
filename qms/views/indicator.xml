<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_indicator_tree"
            model="ir.ui.view">
        <field name="name">qms.indicator.tree</field>
        <field name="model">qms.indicator</field>
        <field name="type">tree</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="responsible_id" />
                <field name="process_id" />
                <field name="state" />
                <field name="last_measurement_date" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_indicator_form"
            model="ir.ui.view">
        <field name="name">qms.indicator.form</field>
        <field name="model">qms.indicator</field>
        <field name="arch"
               type="xml">
            <form>
                <header>
                    <field name="state"
                           widget="statusbar"
                           clickable="True" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="responsible_id" />
                            <field name="process_id" />
                        </group>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                    <notebook>
                        <page string="Components">
                            <field name="policy_component_ids" />
                        </page>
                        <page string="Reviews">
                            <field name="review_ids" />
                        </page>
                        <page string="Measurements">
                            <field name="measurement_ids"
                                   nolabel="True"
                                   attrs="{'readonly':[('state','=','done')]}" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="open_qms_indicator_list"
            model="ir.actions.act_window">
        <field name="name">Indicators</field>
        <field name="res_model">qms.indicator</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
