<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_revision_by_direction_tree" model="ir.ui.view">
        <field name="name">qms.revision_by_direction.tree</field>
        <field name="model">qms.revision_by_direction</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date_open" />
                <field name="date_close" />
                <field name="state" invisible="False" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_revision_by_direction_form" model="ir.ui.view">
        <field name="name">qms.revision_by_direction.form</field>
        <field name="model">qms.revision_by_direction</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_close" string="Close" states="open" type="object" />
                    <field name="state" widget="statusbar" clickable="True" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_open" />
                            <field name="date_close" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" />
                        </page>
                        <page string="New Resources">
                            <field name="resource_ids" />
                        </page>
                        <page string="NC" name="non_conformitys">
                            <field name="non_conformity_ids" nolabel="1"
                                context="{'form_view_ref': 'qms.view_qms_non_conformity_form'}">
                                <tree>
                                    <field name="name" />
                                    <field name="description" />
                                    <field name="reference" />
                                    <field name="create_date" />
                                    <field name="stage_id" />
                                    <field name="origin_ids" />
                                    <field name="closing_date" />
                                </tree>
                            </field>
                        </page>
                        <page string="OBS" name="observations">
                            <field name="observation_ids" nolabel="1"
                                context="{'form_view_ref': 'qms.view_qms_observation_form'}">
                                <tree>
                                    <field name="name" />
                                    <field name="description" />
                                    <field name="reference" />
                                    <field name="create_date" />
                                    <field name="stage_id" />
                                    <field name="origin_ids" />
                                    <field name="closing_date" />
                                </tree>
                            </field>
                        </page>
                        <page string="OM" name="opportunitys">
                            <field name="opportunity_ids" nolabel="1"
                                context="{'form_view_ref': 'qms.view_qms_opportunity_form'}">
                                <tree>
                                    <field name="name" />
                                    <field name="description" />
                                    <field name="reference" />
                                    <field name="create_date" />
                                    <field name="stage_id" />
                                    <field name="origin_ids" />
                                    <field name="closing_date" />
                                </tree>
                            </field>
                        </page>
                        <page string="Actions">
                            <field name="action_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="open_qms_revision_by_direction_list" model="ir.actions.act_window">
        <field name="name">Revisions Direction</field>
        <field name="res_model">qms.revision_by_direction</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_open_revision_by_direction" action="open_qms_revision_by_direction_list"
        parent="qms.menu_qms_main" sequence="50" />

</odoo>
