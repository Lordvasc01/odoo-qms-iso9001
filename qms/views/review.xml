<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_review_tree"
            model="ir.ui.view">
        <field name="name">qms.review.tree</field>
        <field name="model">qms.review</field>
        <field name="type">tree</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="date" />
                <field name="responsible_id" />
                <field name="conclusion" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_review_form"
            model="ir.ui.view">
        <field name="name">qms.review.form</field>
        <field name="model">qms.review</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="date" />
                            <field name="responsible_id" />                            
                        </group>
                        <group>
                            <field name="conclusion" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
