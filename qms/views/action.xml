<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_action_tree"
            model="ir.ui.view">
        <field name="name">qms.action.tree</field>
        <field name="model">qms.action</field>
        <field name="type">tree</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="response_type" />
                <field name="complexity" />
                <field name="date_deadline" />
                <field name="stage_id" />
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_qms_action_filter"
            model="ir.ui.view">
        <field name="name">qms.action.filter</field>
        <field name="model">qms.action</field>
        <field name="type">search</field>
        <field name="arch"
               type="xml">
            <search>
                <field name="name" />
                <field name="create_date" />
                <newline/>
                <filter string="Type"
                        context="{'group_by':'response_type'}" />
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_action_form"
            model="ir.ui.view">
        <field name="name">qms.action.form</field>
        <field name="model">qms.action</field>
        <field name="arch"
               type="xml">
            <form>
                <header>
                    <field name="stage_id"
                           widget="statusbar"
                           clickable="True" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="reference" />
                            <field name="response_type" />
                            <field name="responsible_id" />
                            <field name="complexity" />
                        </group>
                        <group>
                            <field name="create_date" />
                            <field name="opening_date" />
                            <field name="date_closed" />
                            <field name="date_deadline" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"
                                   nolabel="1" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="view_qms_action_kanban"
            model="ir.ui.view">
        <field name="name">qms.action.kanban</field>
        <field name="model">qms.action</field>
        <field name="arch"
               type="xml">
            <kanban default_group_by="stage_id"
                    class="o_kanban_small_column">
                <field name="name" />
                <field name="response_type" />
                <field name="create_date" />
                <field name="date_deadline" />
                <templates>
                    <field name="date_deadline" />
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle btn"
                                   data-toggle="dropdown"
                                   href="#">
                                        <span class="fa fa-bars fa-lg"/>
                                    </a>
                                <ul class="dropdown-menu"
                                    role="menu"
                                    aria-labelledby="dLabel">
                                    <t t-if="widget.editable">
                                        <li>
                                            <a type="edit">Edit</a>
                                        </li>
                                    </t>
                                </ul>
                            </div>
                            <div class="oe_kanban_content">
                                <div>
                                    <strong><field name="name"/></strong>
                                </div>
                                <div>
                                    <field name="response_type" />
                                </div>
                                <div class="text-muted">
                                    <t t-if="record.date_deadline.raw_value and record.date_deadline.raw_value lt (new Date())"
                                       t-set="red">oe_kanban_text_red</t>
                                    <span t-attf-class="#{red || ''}">
                                            <field name="date_deadline"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="open_qms_action_list"
            model="ir.actions.act_window">
        <field name="name">Actions</field>
        <field name="res_model">qms.action</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>
