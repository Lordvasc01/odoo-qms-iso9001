<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_document_revision_tree"
            model="ir.ui.view">
        <field name="name">qms.document.revision.tree</field>
        <field name="model">qms.document.revision</field>
        <field name="type">tree</field>
        <field name="arch"
               type="xml">
            <tree>
              <field name="revision" />
              <field name="date_open" />
              <field name="comments" />
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_qms_document_revision_filter"
            model="ir.ui.view">
        <field name="name">qms.document.revision.filter</field>
        <field name="model">qms.document.revision</field>
        <field name="type">search</field>
        <field name="arch"
               type="xml">
            <search>
                <group>
                    <field name="revision" />
                    <field name="date_open" />
                    <field name="comments" />
                </group>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_document_revision_form"
            model="ir.ui.view">
        <field name="name">qms.document.revision.form</field>
        <field name="model">qms.document.revision</field>
        <field name="type">form</field>
        <field name="arch"
               type="xml">
            <form>
                <group>
                  <group>
                      <field name="revision" />
                  </group>
                  <group>
                      <field name="date_open" />
                      <field name="state" />
                  </group>
                  <group>
                      <field name="comments" />
                  </group>
                </group>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="open_qms_document_revision_list"
            model="ir.actions.act_window">
        <field name="name">Document Revisions</field>
        <field name="res_model">qms.document.revision</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
