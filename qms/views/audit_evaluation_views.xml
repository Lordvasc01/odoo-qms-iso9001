<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_audit_evaluation_tree" model="ir.ui.view">
        <field name="name">qms.audit.evaluation.tree</field>
        <field name="model">qms.audit.evaluation</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="auditors_ids" />
                <field name="date" />
                <field name="type" />
                <field name="competent" />
                <field name="responsible_id" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_qms_audit_evaluation_filter" model="ir.ui.view">
        <field name="name">qms.audit.evaluation.filter</field>
        <field name="model">qms.audit.evaluation</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <group>
                    <field name="date" />
                    <field name="description" />
                    <field name="final_note" />
                    <field name="competent" />
                </group>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_audit_evaluation_form" model="ir.ui.view">
        <field name="name">qms.audit.evaluation.form</field>
        <field name="model">qms.audit.evaluation</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name" />
                        <field name="date" />
                        <field name="type" />
                        <field name="responsible_id" />
                    </group>
                    <group>
                        <field name="understanding" />
                        <field name="compliance" />
                        <field name="planning" />
                        <field name="report" />
                        <field name="final_note" />
                        <field name="competent" />
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <field name="description" />
                    </page>
                    <page string="Auditors">
                        <field name="auditors_ids" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="open_qms_audit_evaluation_list" model="ir.actions.act_window">
        <field name="name">Audit Evaluations</field>
        <field name="res_model">qms.audit.evaluation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_open_audit_evaluation" action="open_qms_audit_evaluation_list" parent="qms.menu_qms_main"
        sequence="40" />

</odoo>
