<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_observation_tree" model="ir.ui.view">
        <field name="name">qms.observation.tree</field>
        <field name="type">tree</field>
        <field name="model">qms.observation</field>
        <field name="inherit_id" ref="qms.view_qms_finding_tree" />
        <field name="arch" type="xml">
            <tree name="finding" position="attributes">
                <attribute name="string">Observation</attribute>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_observation_form" model="ir.ui.view">
        <field name="name">qms.observation.form</field>
        <field name="type">form</field>
        <field name="model">qms.observation</field>
        <field name="inherit_id" ref="qms.view_qms_finding_form" />
        <field name="arch" type="xml">
            <page name="actions" position="before">
                <page string="Causes and Analysis" attrs="{'invisible':[('state','in',['draft','cancel'])]}">
                    <separator string="Analysis" />
                    <field name="analysis" attrs="{'readonly':[('state','not in', ['analysis'])]}" />
                    <separator string="Causes" />
                    <field name="cause_ids" attrs="{'readonly':[('state','not in', ['analysis'])]}" />
                </page>
            </page>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="view_qms_observation_kanban" model="ir.ui.view">
        <field name="name">qms.observation.kanban</field>
        <field name="type">kanban</field>
        <field name="model">qms.observation</field>
        <field name="inherit_id" ref="qms.view_qms_finding_kanban" />
        <field name="arch" type="xml">
            <kanban name="finding" position="attributes">
                <attribute name="string">Observation</attribute>
            </kanban>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window" id="open_qms_observation_list">
        <field name="name">Observations</field>
        <field name="res_model">qms.observation</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_qms_observation_kanban">
        <field name="sequence" eval="1" />
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_qms_observation_kanban" />
        <field name="act_window_id" ref="open_qms_observation_list" />
    </record>

    <record model="ir.actions.act_window.view" id="action_qms_observation_tree">
        <field name="sequence" eval="2" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_qms_observation_tree" />
        <field name="act_window_id" ref="open_qms_observation_list" />
    </record>

    <record model="ir.actions.act_window.view" id="action_qms_observation_form">
        <field name="sequence" eval="3" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_qms_observation_form" />
        <field name="act_window_id" ref="open_qms_observation_list" />
    </record>

    <!-- MENU -->
    <menuitem id="menu_open_observation" name="Observations" parent="qms.menu_open_finding"
        action="open_qms_observation_list" sequence="10" />

</odoo>
