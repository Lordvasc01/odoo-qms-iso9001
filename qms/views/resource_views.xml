<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_resource_tree" model="ir.ui.view">
        <field name="name">qms.resource.tree</field>
        <field name="model">qms.resource</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="resource_type" />
                <field name="responsible_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_resource_form" model="ir.ui.view">
        <field name="name">qms.resource.form</field>
        <field name="model">qms.resource</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="True" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="resource_type" />
                            <field name="responsible_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="open_qms_resource_list" model="ir.actions.act_window">
        <field name="name">Resources</field>
        <field name="res_model">qms.resource</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_config_resource" name="Resources" parent="qms.menu_qms_context" action="open_qms_resource_list"
        sequence="10" />

</odoo>
