<odoo>

    <!-- TREE VIEW -->
    <record id="view_qms_audit_verification_line_tree" model="ir.ui.view">
        <field name="name">qms.audit.verification.line.tree</field>
        <field name="model">qms.audit.verification.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="seq" />
                <field name="name" />
                <field name="point_norm" />
                <field name="is_conformed" />
                <field name="comments" />
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_qms_audit_verification_line_filter" model="ir.ui.view">
        <field name="name">qms.audit.verification.line.filter</field>
        <field name="model">qms.audit.verification.line</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <group>
                    <field name="seq" />
                    <field name="name" />
                    <field name="point_norm" />
                    <field name="is_conformed" />
                    <field name="comments" />
                </group>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_qms_audit_verification_line_form" model="ir.ui.view">
        <field name="name">qms.audit.verification.line.form</field>
        <field name="model">qms.audit.verification.line</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group colspan="4" col="4">
                    <field name="name" />
                    <newline />
                    <field name="point_norm" />
                    <field name="is_conformed" />
                    <newline />
                    <field name="seq" />
                    <newline />
                    <field name="comments" />
                </group>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="open_qms_audit_verification_line_list" model="ir.actions.act_window">
        <field name="name">Verification Lines</field>
        <field name="res_model">qms.audit.verification.line</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
